{
  "name": "wincc-oa-projects",
  "displayName": "WinCC OA Projects",
  "description": "View and manage WinCC OA projects in VS Code",
  "version": "1.1.0",
  "publisher": "mPokornyETM",
  "repository": {
    "type": "git",
    "url": "https://github.com/mPokornyETM/vs-code-wincc-oa-projects-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/mPokornyETM/vs-code-wincc-oa-projects-viewer/issues"
  },
  "homepage": "https://github.com/mPokornyETM/vs-code-wincc-oa-projects-viewer#readme",
  "license": "MIT",
  "icon": "images/icon.png",
  "keywords": [
    "wincc-oa",
    "scada",
    "hmi",
    "wincc-oa-project-admin",
    "wincc-oa-engineering",
    "wincc-oa-runtime",
    "siemens",
    "etm",
    "industrial",
    "automation"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "winccOAExplorer": [
        {
          "id": "winccOAProjects",
          "name": "Locale Projects",
          "when": "true",
          "icon": "$(folder)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "winccOAExplorer",
          "title": "WinCC OA Projects",
          "icon": "$(folder-library)"
        }
      ]
    },
    "commands": [
      {
        "command": "winccOAProjects.refresh",
        "title": "WinCC OA: Refresh Projects",
        "icon": "$(refresh)"
      },
      {
        "command": "winccOAProjects.openProject",
        "title": "WinCC OA: Open Project",
        "icon": "$(folder-opened)"
      },
      {
        "command": "winccOAProjects.openProjectNewWindow",
        "title": "WinCC OA: Open Project in New Window",
        "icon": "$(window)"
      },
      {
        "command": "winccOAProjects.openInExplorer",
        "title": "WinCC OA: Open in Explorer",
        "icon": "$(file-directory)"
      },
      {
        "command": "winccOAProjects.showProjectView",
        "title": "WinCC OA: Show Project Details",
        "icon": "$(info)"
      },
      {
        "command": "winccOAProjects.registerProject",
        "title": "WinCC OA: Register Project",
        "icon": "$(plus)"
      },
      {
        "command": "winccOAProjects.scanForProjects",
        "title": "WinCC OA: Scan for Unregistered Projects",
        "icon": "$(search)"
      },
      {
        "command": "winccOAProjects.registerAllUnregistered",
        "title": "WinCC OA: Register All Unregistered Projects",
        "icon": "$(add)"
      },
      {
        "command": "winccOAProjects.unregisterProject",
        "title": "WinCC OA: Unregister Project",
        "icon": "$(remove)"
      },
      {
        "command": "winccOAProjects.filterProjects",
        "title": "WinCC OA: Filter Projects",
        "icon": "$(filter)"
      },
      {
        "command": "winccOAProjects.clearFilter",
        "title": "WinCC OA: Clear Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "winccOAProjects.registerSubProject",
        "title": "WinCC OA: Register Sub Project",
        "icon": "$(add)"
      },
      {
        "command": "winccOAProjects.registerRunnableProject",
        "title": "WinCC OA: Register Runnable Project",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "winccOAProjects.refresh",
          "when": "view == winccOAProjects",
          "group": "navigation@1"
        },
        {
          "command": "winccOAProjects.scanForProjects",
          "when": "view == winccOAProjects",
          "group": "navigation@2"
        },
        {
          "command": "winccOAProjects.filterProjects",
          "when": "view == winccOAProjects",
          "group": "navigation@3"
        },
        {
          "command": "winccOAProjects.clearFilter",
          "when": "view == winccOAProjects",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "winccOAProjects.openProject",
          "when": "view == winccOAProjects && viewItem == winccOAProject",
          "group": "inline@1"
        },
        {
          "command": "winccOAProjects.openProjectNewWindow",
          "when": "view == winccOAProjects && viewItem == winccOAProject",
          "group": "inline@2"
        },
        {
          "command": "winccOAProjects.openInExplorer",
          "when": "view == winccOAProjects && viewItem == winccOAProject",
          "group": "navigation@1"
        },
        {
          "command": "winccOAProjects.registerProject",
          "when": "view == winccOAProjects && viewItem == winccOAProjectUnregistered",
          "group": "inline@1"
        },
        {
          "command": "winccOAProjects.unregisterProject",
          "when": "view == winccOAProjects && viewItem == winccOAProject",
          "group": "navigation@2"
        },
        {
          "command": "winccOAProjects.registerAllUnregistered",
          "when": "view == winccOAProjects && viewItem == projectCategory",
          "group": "navigation@1"
        }
      ],
      "explorer/context": [
        {
          "command": "winccOAProjects.registerSubProject",
          "when": "explorerResourceIsFolder",
          "group": "2_workspace@1"
        },
        {
          "command": "winccOAProjects.registerRunnableProject",
          "when": "explorerResourceIsFolder",
          "group": "2_workspace@2"
        }
      ],
      "editor/title/context": [
        {
          "command": "winccOAProjects.registerSubProject",
          "when": "resourceScheme == file && explorerResourceIsFolder",
          "group": "2_workspace@1"
        },
        {
          "command": "winccOAProjects.registerRunnableProject",
          "when": "resourceScheme == file && explorerResourceIsFolder",
          "group": "2_workspace@2"
        }
      ],
      "commandPalette": [
        {
          "command": "winccOAProjects.showProjectView"
        },
        {
          "command": "winccOAProjects.refresh"
        },
        {
          "command": "winccOAProjects.openProject"
        },
        {
          "command": "winccOAProjects.openProjectNewWindow"
        },
        {
          "command": "winccOAProjects.openInExplorer"
        },
        {
          "command": "winccOAProjects.registerProject"
        },
        {
          "command": "winccOAProjects.scanForProjects"
        },
        {
          "command": "winccOAProjects.registerAllUnregistered"
        },
        {
          "command": "winccOAProjects.unregisterProject"
        },
        {
          "command": "winccOAProjects.filterProjects"
        },
        {
          "command": "winccOAProjects.clearFilter"
        },
        {
          "command": "winccOAProjects.registerSubProject"
        },
        {
          "command": "winccOAProjects.registerRunnableProject"
        }
      ]
    },
    "keybindings": [
      {
        "command": "winccOAProjects.filterProjects",
        "key": "ctrl+shift+f",
        "when": "view == winccOAProjects && focusedView == winccOAProjects"
      },
      {
        "command": "winccOAProjects.registerSubProject",
        "key": "ctrl+shift+r",
        "when": "explorerResourceIsFolder"
      },
      {
        "command": "winccOAProjects.registerRunnableProject",
        "key": "ctrl+shift+p",
        "when": "explorerResourceIsFolder"
      }
    ],
    "extensionPoints": [
      {
        "name": "winccOAProjectActions",
        "description": "Contribute custom actions for WinCC OA projects"
      },
      {
        "name": "winccOAProjectView",
        "description": "Contribute custom views to WinCC OA project details panel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:coverage": "c8 --reporter=lcov --reporter=text --reporter=json --reporter=json-summary --all --src src --exclude 'src/test/**' npm test",
    "coverage": "npm run test:coverage",
    "build:vsix": "npm run compile && vsce package",
    "package": "vsce package",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "c8": "^10.1.3",
    "canvas": "^3.2.0",
    "eslint": "^9.36.0",
    "sinon": "^21.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/jsdom": "^27.0.0",
    "@types/marked": "^6.0.0",
    "dompurify": "^3.3.0",
    "jsdom": "^27.1.0",
    "marked": "^16.4.1"
  }
}
